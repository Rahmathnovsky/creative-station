// #### TESTIMONIALS ####
.root
  .container.carousel-header
    h4.title-primary
      | #{$t.agency_landing.testimonial_title}
  .carousel
    .slick-carousel#testimonial_carousel(data-length=testiContent.length)
      each item in testiContent
        .item
          +testimonial-card(item.avatar, item.title, item.name, item.text, item.rating)
      .item.show-lg-up
        .item-props-last
  .floating-artwork
    .container.fixed-width
      .artwork
        +slider-art('testimonials')
          .wow.fadeInLeftShort(data-wow-ffset='-60' data-wow-delay='0.3s' data-wow-duration='0.5s')
            img.img-2d3d(src=img_assets+img_artwork[19] data-2d=img_assets+img_artwork[18] data-3d=img_assets+img_artwork[19] alt='services 3d')
